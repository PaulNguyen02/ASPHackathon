@model IEnumerable<WebEnvironment_Hackathon_GaMo.Models.News>

@{
    ViewData["Title"] = "Index";
}

@foreach (var item in Model) {

            <article class="blog_item">
                <div class="blog_item_img">
            <img src="@item.ImageUrl" style="width:400px" alt="post">
            <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id_New" class="blog_item_date" style="margin-left:360px;margin-bottom:20px">
                        <h3> @Html.DisplayFor(modelItem => item.Created_at)</h3>
                        <p>@Html.DisplayFor(modelItem => item.Created_by)</p>
                    </a>
                </div>
                <div class="blog_details">
                    <a class="d-inline-block" href="blog_details.html">
                        <h2 class="blog-head" style="color: #2d2d2d;"> @Html.DisplayFor(modelItem => item.Title)</h2>
                    </a>
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    <ul class="blog-info-link">
                        <li><a href="#"><i class="fa fa-user"></i> Travel, Lifestyle</a></li>
                        <li><a href="#"><i class="fa fa-comments"></i> @Html.DisplayFor(modelItem => item.UserId)</a></li>
                    </ul>
                </div>
            </article>
}
